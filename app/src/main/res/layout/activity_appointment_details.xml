                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"

                    >
                    <TextView
                        android:id="@+id/txt_seeLess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See Less"
                        android:textSize="11sp"
                        style="@style/style_sec"
                        android:gravity="center"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_up_24"
                        android:textColor="@color/colorPrimary"
                        />
                   <!-- <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_drop_up_24"
                        />-->
                </LinearLayout>
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/item_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:weightSum="2"
                    >
                        <TextView
                            android:id="@+id/requirmentGethering"
                            style="@style/style_sec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:padding="2dp"
                            android:layout_weight="1"
                            android:text="Requirment Gethering"
                            android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/tv_add_new_item"
                        android:layout_width="wrap_content"

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <!--  <data>
        <variable
            name="viewModel"
            type="com.eot_app.nav_menu.jobs.job_card_view.JobCardViewActivity" />
    </data>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fadeScrollbars="false"
            android:fillViewport="true"
            android:nestedScrollingEnabled="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:nestedScrollingEnabled="true"
                android:orientation="vertical"
                android:paddingHorizontal="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_label_to"
                    style="@style/style_sec_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    />
                    <TextView
                        android:id="@+id/to_Star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_label_to"
                        android:textColor="@color/red_color"
                        android:layout_marginTop="6dp"
                        android:text=" *"/>
                </RelativeLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_email_to"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_input_field_height"
                    android:background="@drawable/bg_edt_jobcart"
                    android:gravity="center"
                    android:importantForAutofill="no|noExcludeDescendants"
                    app:hintEnabled="false"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edt_email_to"
                            style="@style/style_sec_sec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:importantForAutofill="no|noExcludeDescendants"
                            android:inputType="text"
                            android:paddingStart="9dp"
                            android:singleLine="true"
                            tools:ignore="Autofill,LabelFor,TextFields" />

                        <ImageView
                            android:id="@+id/drop_down_for_cc"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_drop_down_black" />
                    </LinearLayout>

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/hideCCLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_font_color" />

                    <TextView
                        android:id="@+id/tv_label_cc"
                        style="@style/style_sec_sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_email_cc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_input_field_height"
                        android:background="@drawable/bg_edt_jobcart"
                        android:gravity="center"
                        android:importantForAutofill="no|noExcludeDescendants"
                        app:hintEnabled="false"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <EditText
                            android:id="@+id/edt_email_cc"
                            style="@style/style_sec_sec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:importantForAutofill="no|noExcludeDescendants"
                            android:inputType="text"
                            android:paddingStart="9dp"
                            android:singleLine="true"
                            tools:ignore="LabelFor,TextFields" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border_font_color" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_label_sub"
                    style="@style/style_sec_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp" />
                    <TextView
                        android:id="@+id/subject_Star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_label_sub"
                        android:textColor="@color/red_color"
                        android:layout_marginTop="6dp"
                        android:text=" *"/>
                </RelativeLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_email_subject"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_input_field_height"
                    android:background="@drawable/bg_edt_jobcart"
                    android:gravity="center"
                    android:importantForAutofill="no|noExcludeDescendants"
                    app:hintEnabled="false"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <EditText
                        android:id="@+id/edt_email_subject"
                        style="@style/style_sec_sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:importantForAutofill="no|noExcludeDescendants"
                        android:inputType="text"
                        android:paddingStart="9dp"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border_font_color" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_label_msg"
                    style="@style/style_sec_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:paddingBottom="5dp"
                    />
                <TextView
                    android:id="@+id/msg_Star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_label_msg"
                    android:textColor="@color/red_color"
                    android:layout_marginTop="6dp"
                    android:text=" *"/>
            </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border_font_color" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/bg_edt_jobcart"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarSize="8dp"
                    android:scrollbarThumbVertical="@color/scroll_thumb_color"
                    android:scrollbarTrackVertical="@color/scroll_track_color"
                    android:scrollbars="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_email_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="2dp"
                            android:visibility="gone"
                            app:hintEnabled="false"
                            app:hintTextAppearance="@style/TextInputLayoutHintText">

                            <EditText
                                android:id="@+id/edt_email_message"
                                style="@style/style_sec_sec"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:gravity="top|start"
                                android:importantForAutofill="no"
                                android:inputType="textMultiLine"
                                android:nestedScrollingEnabled="true"
                                android:paddingTop="0dp"
                                android:scrollbarAlwaysDrawVerticalTrack="true"
                                android:scrollbars="vertical"
                                android:visibility="gone"
                                tools:ignore="LabelFor,TextFields" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.eot_app.eoteditor.EotEditor
                            android:id="@+id/job_card_editor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border_font_color" />

                <!--                    <View-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="1dp"-->
                <!--                        android:background="@color/border_font_color" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"

                    >

                    <TextView
                        android:id="@+id/txt_lblAttachment"
                        style="@style/dialog_edittext_lbl_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Attachment"

                        />

                    <TextView
                        android:id="@+id/txt_lblAddAttachment"
                        style="@style/dialog_edittext_lbl_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Add Attachment"
                        android:textColor="@color/txt_dialog_link_color" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_jobCardAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:background="@color/bg_rv_dialog"
                    android:maxLength="150"
                    android:padding="10dp"

                    />

                <RelativeLayout
                    android:id="@+id/signature_view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/hint_signature_txt"
                        style="@style/style_sec_sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/linearLayout_signature"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:background="@drawable/bg_edt_jobcart"
                        android:layout_below="@+id/hint_signature_txt"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/signature_txt"
                            style="@style/style_sec_sec"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint=""
                            android:paddingLeft="5dp"
                            android:text="@string/technitian_signature" />

                        <ImageView
                            android:id="@+id/remove_techSignature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/img_dialog_close" />

                        <ImageView
                            android:id="@+id/img_signature"
                            style="@style/subtext_style"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_drop_down_black"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                        android:id="@+id/signature_Dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayout_signature"
                        android:background="@android:color/transparent"
                        android:dropDownWidth="match_parent"
                        android:minHeight="20dp"
                        android:popupBackground="@drawable/popupbg"
                        android:visibility="invisible" />
                </RelativeLayout>

                <CheckBox
                    android:id="@+id/cb_Sign"
                    style="@style/dialog_edittext_lbl_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/cb_Chat"
                    style="@style/dialog_edittext_lbl_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/template_view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/hint_template_txt"
                        style="@style/style_sec_sec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/linearLayout_templat"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_below="@id/hint_template_txt"
                        android:background="@drawable/bg_edt_jobcart"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/templat_txt"
                            style="@style/style_sec_sec"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint=""
                            android:textColor="@color/dialog_edit_text_lbl_color"
                            android:text="Select Template"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:id="@+id/img_templat"
                            style="@style/subtext_style"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_drop_down_black"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                        android:id="@+id/templat_Dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayout_templat"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/transparent"
                        android:dropDownWidth="match_parent"
                        android:minHeight="20dp"
                        android:popupBackground="@drawable/popupbg"
                        android:visibility="invisible" />
                </RelativeLayout>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/download_jobcard_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/submit_btn"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/download_2x"
                    android:layout_margin="1dp"
                    />
                <TextView
                    android:id="@+id/tv_download_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="1dp"
                    style="@style/style_sec"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/send_jobcard_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/submit_btn"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/send"/>
                <TextView
                    android:id="@+id/tv_send_jobcard_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send jobcard"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="1dp"
                    style="@style/style_sec"/>

            </LinearLayout>

            <!--<androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_view"
                style="@style/style_sec"
                android:layout_width="0dp"
                android:text="Download"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/submit_btn"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_send_email"
                style="@style/style_sec"
                android:layout_width="0dp"
                android:text="Send JobCard"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/submit_btn"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />-->
        </LinearLayout>
    </LinearLayout>
</layout>
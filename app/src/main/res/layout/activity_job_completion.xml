<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7fcfe"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/cancel_txt"
                style="@style/jobComStyle"
                android:text="@string/cancel"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/complHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/arimo_bold"
                android:gravity="center"
                android:text="@string/completion_notes"
                android:textColor="@color/white"
                android:textSize="@dimen/large_text"
                android:textStyle="bold"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/save_txt1"
                style="@style/jobComStyle"
                android:text="@string/save"
                android:textColor="@color/white"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_divider"
            android:orientation="vertical"
            android:weightSum="5"
            >

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_weight=".2"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tv_label_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:text="@string/completion_notes"
                    tools:ignore="RelativeOverlap" />


            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_buttons"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:visibility="gone"
                >


                <TextView
                    android:id="@+id/tvFetchDes"
                    android:drawablePadding="2dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/declinebtn"
                    android:padding="4dp"
                    android:drawableStart="@drawable/ic_quote_small"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fetch Des"
                    tools:ignore="HardcodedText,SmallSp" />


                <TextView
                    android:layout_marginHorizontal="2dp"
                    android:id="@+id/tvDone"
                    android:drawablePadding="2dp"
                    android:backgroundTint="@color/payment_text_two"
                    android:background="@drawable/declinebtn"
                    android:padding="4dp"
                    android:drawableStart="@drawable/ic_tick_white"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextView
                    android:id="@+id/tvCancel"
                    android:drawablePadding="2dp"
                    android:backgroundTint="@color/light_red"
                    android:background="@drawable/declinebtn"
                    android:padding="4dp"
                    android:drawableStart="@drawable/ic_cancel_12"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    tools:ignore="HardcodedText,SmallSp" />

                <TextView
                    android:layout_marginHorizontal="2dp"
                    android:id="@+id/tvtimestemp"
                    android:drawablePadding="2dp"
                    android:backgroundTint="@color/payment_text_two"
                    android:background="@drawable/declinebtn"
                    android:padding="4dp"
                    android:drawableStart="@drawable/ic_outline_watch_white_24"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TimeStemp"
                    tools:ignore="HardcodedText,SmallSp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                    android:id="@+id/job_suggestion_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/suggestion_img"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:popupBackground="@drawable/popupbg"
                    android:visibility="visible" />

                    <ImageView
                        android:id="@+id/suggestion_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_boost"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/compedt"
                style="@style/subtext_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_cntct_brdr"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:layout_weight="1"
                tools:ignore="Autofill,LabelFor"
                android:visibility="gone"
                />


            <LinearLayout
                android:id="@+id/ll_attachment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone"
                >


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.core.widget.ContentLoadingProgressBar
                        android:id="@+id/progressBar"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_completionForm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="2.55"
                android:background="@color/window_background"
                android:orientation="vertical">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_notSyncParent"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:padding="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_not_sync_completion"
    android:visibility="gone"
    >

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/not_sync"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_notSyncLabel"
        style="@style/header_text_style2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not synced at"
        android:layout_marginStart="10dp"
        android:textColor="@color/font_header_color"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />
</androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_completion_form"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/window_background"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="2dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintBottom_toTopOf="@+id/save_txt"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/save_txt"
                        style="@style/subtext_style"
                        android:background="@drawable/submit_btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/save"
                        android:layout_marginBottom="5dp"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="14dp"
                        android:fontFamily="@font/arimo_medium"

                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</layout>
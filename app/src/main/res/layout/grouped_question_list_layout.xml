<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    android:layout_marginVertical="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp"
        >

        <TextView
            android:id="@+id/tv_groupedHeader"
            style="@style/header_text_style1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:text="@string/dynamic_question_add"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toStartOf="@+id/cl_btnMark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_btnMark"
            android:background="@drawable/bg_mark_as_completion_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_groupedHeader"
            app:layout_constraintBottom_toBottomOf="@id/tv_groupedHeader"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <ImageView
                android:id="@+id/img_markBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mark_as_done"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/tv_markBtn"
                style="@style/btn_txt_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Mark as done"
                android:textColor="@color/green1"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/img_markBtn"
                app:layout_constraintStart_toEndOf="@id/img_markBtn"
                app:layout_constraintEnd_toStartOf="@id/img_crossBtn"
                app:layout_constraintTop_toTopOf="@+id/img_markBtn" />
            <ImageView
                android:id="@+id/img_crossBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mark_as_cancel"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/img_markBtn"
                app:layout_constraintBottom_toBottomOf="@id/img_markBtn"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_btnCompelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_completedBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mark_as_done"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_completeBtn"
                style="@style/header_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:gravity="start|top"
                android:text="Mark as done"
                android:textColor="@color/green1"
                android:textStyle="normal"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/img_completedBtn"
                app:layout_constraintStart_toEndOf="@id/img_completedBtn"
                app:layout_constraintTop_toTopOf="@+id/img_completedBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>


<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:id="@+id/email_lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center|top"
        android:orientation="vertical"
        tools:ignore="ObsoleteLayoutParam">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:hint="@string/login_email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_email"
            style="@style/style_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/start_margin"
            android:layout_marginEnd="@dimen/end_margin"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_marginTop="@dimen/left_margin"
        style="@style/style_sec"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_field_height"
        android:layout_marginStart="@dimen/start_margin"
        android:background="@color/colorPrimary"
        android:layout_marginEnd="@dimen/end_margin"
        android:text="@string/next"
        android:textColor="@color/white"
        android:singleLine="true"
        android:textStyle="bold"
        android:textAllCaps="false"/>


    <TextView
        android:id="@+id/registeration_btn"
        style="@style/style_sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:text="@string/registerr"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/medium_text"
        android:textStyle="normal"
        android:padding="@dimen/left_margin"
        android:focusable="true"
        tools:ignore="SpUsage" />
</LinearLayout>
</layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:gravity="center"
    android:background="@color/bg_chat_header"
    android:orientation="vertical"
    android:padding="2dp">


    <TextView
        android:id="@+id/usr_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_drop_down"
        android:drawableTint="@color/color_gray"
        android:gravity="center"
        android:padding="2dp"
        android:text="6 Users"
        android:textColor="@color/color_gray"
        android:textStyle="normal"
        tools:ignore="HardcodedText,UnusedAttribute" />


    <com.eot_app.utility.util_interfaces.NoDefaultSpinner
        android:id="@+id/usr_stats_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:popupBackground="@drawable/popupbg" />


</LinearLayout>
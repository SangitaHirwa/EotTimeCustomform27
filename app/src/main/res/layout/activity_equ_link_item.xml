<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


        <TextView
            android:id="@+id/txt_lbl"
            style="@style/style_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:elevation="4dp"
            android:text="Note : Step 1 - Choose an item from the inventory
Choose an item from the inventory Choose an item from the inventory yy"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            android:paddingHorizontal="13dp"
            android:backgroundTint="@color/bg_job"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
             />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_font_color"
        app:layout_constraintTop_toBottomOf="@id/txt_lbl"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_link_item"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingVertical="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        tools:listitem="@layout/rv_link_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/status_bar_offline_gray"
            android:paddingLeft="20dp"
            android:visibility="visible"
            android:id="@+id/offlineStatusBar"

            >
            <TextView
                android:id="@+id/offlineStatusBar_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style"
                android:text="Offline - Showing limited content "
                android:drawableLeft="@drawable/vector"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                android:drawablePadding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <RelativeLayout
            android:id="@+id/req_add_item_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:fitsSystemWindows="false"
            android:layout_below="@+id/offlineStatusBar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/left_margin"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/itemlayout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_field_height"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:paddingTop="5dp"
                            app:hintAnimationEnabled="true"
                            app:hintEnabled="false"
                            app:hintTextAppearance="@style/TextInputLayoutHintText">

                            <AutoCompleteTextView
                                android:id="@+id/autocomplete_item"
                                style="@style/style_sec_sec"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@android:color/transparent"
                                android:paddingTop="8dp"
                                android:popupBackground="@drawable/popupbg"
                                android:singleLine="true"
                                tools:ignore="LabelFor" />



                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="20dp"
                            android:id="@+id/ivCross"
                            android:visibility="gone"
                            android:layout_width="17dp"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/delete"
                            android:layout_height="17dp"
                            android:layout_gravity="end"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/nm_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/border_font_color" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_field_height"
                        >

                        <TextView
                            android:id="@+id/hint_brand_txt"
                            style="@style/text_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textStyle="normal"
                            android:visibility="gone" />

                        <LinearLayout
                        android:id="@+id/linearLayout_brand"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_below="@+id/hint_brand_txt"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/brand_txt"
                            style="@style/style_sec_sec"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:hint="" />

                        <ImageView
                            android:id="@+id/drop_dwon_brand"
                            style="@style/subtext_style"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_drop_down_black"
                            android:tint="@color/colorPrimary"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                        android:id="@+id/brand_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/linearLayout_brand"
                        android:background="@android:color/transparent"
                        android:dropDownWidth="match_parent"
                        android:minHeight="20dp"
                        android:popupBackground="@drawable/popupbg"
                        android:visibility="invisible" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/part_no_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/border_font_color" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/modelNo_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_field_height"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="false"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <EditText
                            android:id="@+id/edt_modelNo"
                            style="@style/style_sec_sec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:singleLine="true"
                            tools:ignore="Autofill,LabelFor" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <View
                        android:id="@+id/model_no_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/border_font_color" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/item_qty_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_field_height"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="false"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <EditText
                            android:id="@+id/edt_qty"
                            style="@style/style_sec_sec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:singleLine="true"
                            tools:ignore="Autofill,LabelFor" />
                        <!--android:hint="@string/hsn_code"-->
                    </com.google.android.material.textfield.TextInputLayout>


                    <View
                        android:id="@+id/qty_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/border_font_color" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/add_edit_item_Btn"
                    style="@style/style_sec"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_field_height"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/submit_btn"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:ignore="ObsoleteLayoutParam" />
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



    <androidx.cardview.widget.CardView
        android:id="@+id/cv_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="2dp"
        android:elevation="2dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">
<!--        android:layout_marginBottom="8dp"
-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:id="@+id/textView9"
                style="@style/job_details_headr_style"
                android:layout_alignParentStart="true"
                android:text="Instruction"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/textViewInstruction"
                style="@style/job_details_child_style"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="5dp"
                android:text="@string/work_faster_with_tools_like_compatibility_toggles_adb_incremental_installs_and_more_plus_the_code_changes_that_might_ve_affected_your_app_download_the_latest_version" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_markDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_service_done"
        app:layout_constraintBottom_toBottomOf="@id/txt_title_service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_title_service" />
<TextView
    android:id="@+id/txt_title_service"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/subtext_style"
    android:text="Service"
    android:textColor="@color/gray1"
    android:textSize="12sp"
    android:layout_marginStart="2dp"
    app:layout_constraintStart_toEndOf="@id/img_markDone"
    app:layout_constraintTop_toTopOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-40dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="2dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">
        <!--        android:layout_marginBottom="8dp"
        -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/person_name"
                        style="@style/job_details_headr_style"
                        android:layout_width="0dp"
                        android:text="job - client name"
                        android:paddingHorizontal="3dp"
                        app:layout_constraintEnd_toStartOf="@+id/textViewJobCode"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="HardcodedText,MissingConstraints" />


                    <TextView
                        android:id="@+id/textViewJobCode"
                        style="@style/job_details_child_style"
                        android:text="Job code :"
                        android:layout_width="0dp"
                        android:gravity="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="HardcodedText,MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!--            <TextView-->
            <!--                android:id="@+id/person_name"-->
            <!--                style="@style/job_details_headr_style"-->
            <!--                android:layout_alignParentLeft="true"-->
            <!--                android:text="Client Name" />-->
            <!--android:layout_alignParentLeft="true"-->

            <TextView
                android:id="@+id/site_name"
                style="@style/style_thrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="Site Name"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />

            <!--            <TextView-->
            <!--                android:id="@+id/textViewJobCode"-->
            <!--                style="@style/job_details_child_style"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:layout_marginTop="2dp"-->
            <!--                android:layout_toEndOf="@+id/linearLayout"-->
            <!--                android:text="Job code :" />-->

            <ImageView
                android:id="@+id/map_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/site_name"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_map"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:id="@+id/rvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/site_name"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/map_icon"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewAddress"
                    style="@style/job_details_child_style"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:gravity="start"
                    android:text="" />

            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/contact_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="2dp"
        android:elevation="2dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">
        <!--        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
                app:cardCornerRadius="2dp"
app:cardUseCompatPadding="true"
        android:layout_marginBottom="8dp"-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp">
            <!--android:padding="12dp"-->
            <TextView
                android:id="@+id/contact_name_lable"
                style="@style/job_details_headr_style"
                android:layout_alignParentStart="true"
                android:text="Client Name"
                tools:ignore="HardcodedText" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_name_lable"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewContactperson"
                    style="@style/style_thrid_thrd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="text 123456"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText" />


                <ImageView
                    android:id="@+id/imageViewCall"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_phone"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageViewChat"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_chat_circle"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imageViewEmail"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_mail"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
</layout>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    android:layout_marginVertical="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <!--question Layout-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="start|top"
            android:orientation="horizontal">

            <!--add question no.-->

            <TextView
                android:id="@+id/que_no"
                style="@style/header_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <!--add ques-->
            <TextView
                android:id="@+id/tvQuestion"
                style="@style/header_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:gravity="start|top"
                android:text="@string/dynamic_question_add"
                app:layout_constraintStart_toEndOf="@id/que_no"
                app:layout_constraintTop_toTopOf="parent"
                />

            <CheckBox
                android:id="@+id/checkbox_single"
                style="@style/header_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-3dp"
                android:buttonTint="@color/txt_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvQuestion"
                />
            <TextView
                android:id="@+id/txt_upload"
                style="@style/header_text_style2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textColor="@color/txt_link_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--ans ques type 1 text-->

        <EditText
            android:id="@+id/type_text"
            style="@style/subtext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_shap_qus"
            android:fontFamily="@font/arimo_regular"
            android:gravity="center_vertical"
            android:maxHeight="@dimen/send_msg_layout"
            android:nestedScrollingEnabled="true"
            android:overScrollMode="always"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:textStyle="normal"
            tools:ignore="Autofill,LabelFor,TextFields" />


        <!--       style="@style/subtext_style"-->
        <!--ans ques type 2 text area-->


        <EditText
            android:id="@+id/type_text_area"
            style="@style/subtext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:overScrollMode="always"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_shap_qus"
            android:ems="10"
            android:fontFamily="@font/arimo_regular"
            android:gravity="top|start"
            android:maxHeight="@dimen/send_msg_layout"
            android:maxLines="3"
            android:minLines="3"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:textStyle="normal"
            android:visibility="visible"
            tools:ignore="Autofill,LabelFor,TextFields" />

        <!--que type 3 for checkbox-->

        <LinearLayout
            android:id="@+id/linearCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/linearSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_shap_qus"
            android:gravity="center"
            android:padding="5dp">


            <LinearLayout
                android:id="@+id/dropdown_optn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/spinner_text"
                    style="@style/subtext_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/arimo_regular"
                    android:gravity="center_vertical"
                    tools:ignore="InefficientWeight" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_drop_down_black"
                    tools:ignore="ContentDescription,ObsoleteLayoutParam" />

            </LinearLayout>

            <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                android:id="@+id/dropdown_spinner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/dropdown_optn"
                android:background="@android:color/transparent"
                android:visibility="invisible" />
        </RelativeLayout>


        <!--date ans que type 5-->

        <LinearLayout
            android:id="@+id/linearDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_shap_qus"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvDate"
                style="@style/subtext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/date_icon"
                android:fontFamily="@font/arimo_regular"
                android:gravity="center|start"
                android:hint="DD-MM-YY"
                android:padding="5dp"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!--Time ans que type 6-->

        <LinearLayout
            android:id="@+id/linearTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_shap_qus"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvTime"
                style="@style/subtext_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/watch_icon"
                android:fontFamily="@font/arimo_regular"
                android:gravity="center|start"
                android:hint="HH-MM-AM"
                android:padding="5dp"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />
        </LinearLayout>


        <!--Date Time Question Type 7 -->

        <LinearLayout
            android:id="@+id/linearDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_shap_qus"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvTimeDate"
                style="@style/subtext_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/arimo_regular"
                android:gravity="center|start"
                android:hint="Choose date time"
                android:padding="5dp"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/timeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/watch_icon"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/dateImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/date_icon"
                tools:ignore="ContentDescription" />

        </LinearLayout>
        <EditText
            android:id="@+id/type_Number"
            style="@style/subtext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_shap_qus"
            android:fontFamily="@font/arimo_regular"
            android:gravity="center_vertical"
            android:maxHeight="@dimen/send_msg_layout"
            android:nestedScrollingEnabled="true"
            android:overScrollMode="always"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:textStyle="normal"
            android:inputType="number"
            tools:ignore="Autofill,LabelFor,TextFields" />

        <!--Add View For Signature -->
        <LinearLayout
            android:id="@+id/signature_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/sign_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <!--add ques-->

                <TextView
                    android:id="@+id/add_sign_lable"
                    style="@style/header_text_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:gravity="start|top"
                    tools:ignore="InefficientWeight" />

                <ImageView
                    android:id="@+id/add_sign"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_plus"
                    android:tint="@color/colorPrimary"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />
                <!--android:src="@drawable/ic_plus"-->


                <ImageView
                    android:id="@+id/edit_sign"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_sign_edit"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/delete_sign"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_delete_24"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <ImageView
                android:id="@+id/signature_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="gone"
                tools:ignore="ContentDescription" />
        </LinearLayout>


        <!--Document Uploading-->
        <LinearLayout
            android:id="@+id/Attchment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/Attchment_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal"
                android:visibility="visible">

                <!--add ques-->

                <TextView
                    android:id="@+id/Attchment_lable"
                    style="@style/header_text_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_weight="2"
                    android:gravity="start|top"
                    android:text="@string/customer_portal_login_with_your_username_and_password_directly_from_here"
                    tools:ignore="InefficientWeight" />

                <ImageView
                    android:id="@+id/delete_attchment"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_baseline_delete_24"
                    tools:ignore="ContentDescription" />

                <Button
                    android:id="@+id/buttonAttchment"
                    style="@style/subtext_style"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/submit_btn"
                    android:padding="5dp"
                    android:text="@string/add_attachment"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="@dimen/medium_txt"
                    tools:ignore="SpUsage" />

            </LinearLayout>

            <ImageView
                android:id="@+id/attchment_set"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="5dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>
<!--MultiAttachment-->
        <FrameLayout
            android:id="@+id/fm_multiattachment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/border_font_color" />


    </LinearLayout>
</androidx.cardview.widget.CardView>





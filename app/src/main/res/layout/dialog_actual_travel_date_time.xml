<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/header"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:textSize="16sp"
            style="@style/job_details_headr_style"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_actual_date_time"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/start_date_label"
                    style="@style/job_details_headr_style"
                    />
                <TextView
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorPrimary"
                    android:drawableEnd="@drawable/ic_edit_small"
                    android:drawableStart="@drawable/date_icon"
                    android:id="@+id/date_ac_start"
                    style="@style/job_details_child_style"
                    android:layout_marginVertical="5dp"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/end_date_label"
                    style="@style/job_details_headr_style"

                    />
                <TextView
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/colorPrimary"
                    android:drawableEnd="@drawable/ic_edit_small"
                    android:drawableStart="@drawable/date_icon"
                    android:id="@+id/date_ac_end"
                    style="@style/job_details_child_style"
                    android:layout_marginVertical="5dp"
                    tools:ignore="UnusedAttribute" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_travel_date_time"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/start_date_label1"
                    style="@style/job_details_headr_style"
                    />
                <TextView
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/date_icon"
                    android:id="@+id/date_tr_start"
                    android:drawableTint="@color/colorPrimary"
                    android:drawableEnd="@drawable/ic_edit_small"
                    style="@style/job_details_child_style"
                    android:layout_marginVertical="5dp"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="@string/select_end_date"
                    android:layout_marginTop="5dp"
                    android:id="@+id/end_date_label1"
                    style="@style/job_details_headr_style"

                    />
                <TextView
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/date_icon"
                    android:id="@+id/date_tr_end"
                    android:drawableTint="@color/colorPrimary"
                    android:drawableEnd="@drawable/ic_edit_small"
                    style="@style/job_details_child_style"
                    android:layout_marginVertical="5dp"

                    tools:ignore="UnusedAttribute" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="2"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_submit"
                style="@style/style_sec"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_btn"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_cancel"
                style="@style/style_sec"
                android:layout_weight="1"
                android:layout_margin="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_btn"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
        </LinearLayout>



    </LinearLayout>



</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingStart="30dp"
            android:paddingEnd="33dp"
            android:background="@color/bg_color_dialog_toolbar"
            >

            <TextView
                android:id="@+id/txt_title_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Preview and Send Jobcard"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_btn_close_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_btn_close_toolbar"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/img_dialog_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:fadeScrollbars="false"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingHorizontal="25dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_emailType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_label_to"
                        style="@style/dialog_edittext_lbl_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="To*"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_email_to"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_input_field_height"
                        android:gravity="center"
                        app:hintEnabled="false"
                        android:background="@drawable/bg_edt_jobcart"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <EditText
                            android:id="@+id/edt_email_to"
                            style="@style/style_sec_sec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:singleLine="true"
                            android:paddingStart="9dp"
                            tools:ignore="Autofill,LabelFor,TextFields" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_font_color" />
                    <TextView
                        android:id="@+id/tv_label_cc"
                        style="@style/dialog_edittext_lbl_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Cc"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_email_cc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_input_field_height"
                        android:gravity="center"
                        app:hintEnabled="false"
                        android:background="@drawable/bg_edt_jobcart"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <EditText
                            android:id="@+id/edt_email_cc"
                            style="@style/style_sec_sec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:singleLine="true"
                            android:paddingStart="9dp"
                            tools:ignore="LabelFor,TextFields" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_font_color" />
                    <TextView
                        android:id="@+id/tv_label_sub"
                        style="@style/dialog_edittext_lbl_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Subject*"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_email_subject"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_input_field_height"
                        android:gravity="center"
                        app:hintEnabled="false"
                        android:background="@drawable/bg_edt_jobcart"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">
                        <EditText
                            android:id="@+id/edt_email_subject"
                            style="@style/style_sec_sec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:importantForAutofill="no"
                            android:inputType="text"
                            android:singleLine="true"
                            android:paddingStart="9dp"
                            tools:ignore="LabelFor,TextFields" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_font_color" />
                    <TextView
                        android:id="@+id/tv_label_msg"
                        style="@style/dialog_edittext_lbl_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Message*"
                         />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_layout_email_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:visibility="visible"
                        android:orientation="vertical"
                        app:hintEnabled="false"
                        app:hintTextAppearance="@style/TextInputLayoutHintText">

                        <EditText
                            android:id="@+id/edt_email_message"
                            style="@style/style_sec_sec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="top|start"
                            android:importantForAutofill="no"
                            android:inputType="textMultiLine"
                            android:paddingTop="0dp"
                            android:scrollbarAlwaysDrawVerticalTrack="true"
                            android:scrollbars="vertical"
                            android:nestedScrollingEnabled="true"
                            android:visibility="gone"
                            tools:ignore="LabelFor,TextFields" />
                    </com.google.android.material.textfield.TextInputLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scrollbars="vertical"
                android:scrollbarSize="8dp"
               android:scrollbarAlwaysDrawVerticalTrack="true"
                android:background="@drawable/bg_edt_jobcart"
                android:scrollbarThumbVertical="@color/scroll_thumb_color"
                android:scrollbarTrackVertical="@color/scroll_track_color"

                >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginVertical="12dp"
                        android:layout_marginHorizontal="14dp"
                        >
                    <com.eot_app.eoteditor.EotEditor
                        android:id="@+id/eot_editor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbarThumbVertical="@color/scroll_thumb_color"
                        android:scrollbarTrackVertical="@color/scroll_track_color"
                        android:scrollbarSize="5dp"
                        />
                    </LinearLayout>
            </androidx.core.widget.NestedScrollView>
<!--                    <View-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="1dp"-->
<!--                        android:background="@color/border_font_color" />-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        >
                        <TextView
                            android:id="@+id/txt_lblAttachment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/dialog_edittext_lbl_style"
                            android:text="Attachment"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            />
                        <TextView
                            android:id="@+id/txt_lblAddAttachment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/dialog_edittext_lbl_style"
                            android:text="Add Attachment"
                            android:textColor="@color/txt_dialog_link_color"
                            app:layout_constraintTop_toTopOf="@id/txt_lblAttachment"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

<!--                        <CheckBox-->
<!--                            android:id="@+id/cb_pdf"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:button="@null"-->
<!--                            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"-->
<!--                            android:text="Job.pdf"-->
<!--                            android:paddingStart="5dp"-->
<!--                            app:layout_constraintEnd_toEndOf="parent"-->
<!--                            app:layout_constraintStart_toStartOf="@+id/txt_lblAttachment"-->
<!--                            app:layout_constraintTop_toBottomOf="@id/txt_lblAttachment" />-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_jobCardAttachment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/bg_rv_dialog"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/txt_lblAttachment"
                            app:layout_constraintStart_toStartOf="@id/txt_lblAttachment"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <CheckBox
                        android:id="@+id/cb_Sign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Send E-sign pad with email."
                        style="@style/dialog_edittext_lbl_style"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/template_view"
                    android:layout_marginTop="20dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/hint_template_txt"
                        style="@style/dialog_edittext_lbl_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textStyle="normal"
                        android:text="Select Templet"
                        android:gravity="center"
                        android:layout_marginEnd="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@id/linearLayout_templat"
                        android:layout_alignBottom="@id/linearLayout_templat"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/linearLayout_templat"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:background="@drawable/bg_edt_jobcart"
                        android:orientation="horizontal"
                        android:layout_toEndOf="@id/hint_template_txt"
                        android:layout_alignParentEnd="true"
                        android:paddingStart="10dp"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/templat_txt"
                            android:text="Select Template"
                            style="@style/style_sec_sec"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint=""
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:id="@+id/img_templat"
                            style="@style/subtext_style"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_drop_down_black"
                            android:tint="@color/colorPrimary"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                        android:id="@+id/templat_Dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayout_templat"
                        android:background="@android:color/transparent"
                        android:dropDownWidth="match_parent"
                        android:minHeight="20dp"
                        android:popupBackground="@drawable/popupbg"
                        android:layout_alignParentEnd="true"
                        android:visibility="invisible" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/signature_view"
                    android:visibility="gone"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginVertical="10dp"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/hint_signature_txt"
                        style="@style/text_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textStyle="normal"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/linearLayout_signature"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/input_field_height"

                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/signature_txt"
                            style="@style/style_sec_sec"
                            android:text="@string/technitian_signature"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:hint="" />

                        <ImageView
                            android:id="@+id/img_signature"
                            style="@style/subtext_style"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_drop_down_black"
                            android:tint="@color/colorPrimary"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                        android:id="@+id/signature_Dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayout_signature"
                        android:background="@android:color/transparent"
                        android:dropDownWidth="match_parent"
                        android:minHeight="20dp"
                        android:popupBackground="@drawable/popupbg"
                        android:visibility="invisible" />
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_view"
                style="@style/style_sec"
                android:layout_width="0dp"
                android:text="@string/print_job_card"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/submit_btn"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_send_email"
                style="@style/style_sec"
                android:layout_width="0dp"
                android:text="@string/email_job_card"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/submit_btn"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
</layout>
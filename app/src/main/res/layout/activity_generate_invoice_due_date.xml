<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    >

    <androidx.cardview.widget.CardView

        android:id="@+id/card_invoice_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f2f3"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="20dp"
        card_view:contentPadding="10dp"
        >

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:background="#f6f2f3"
            android:paddingTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f6f2f3"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Invoice Due Date"
                    android:background="#f6f2f3"
                    style="@style/style_sec_sec"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/pay_edt_dialog"
                    android:ems="10"
                    style="@style/style_sec"
                    >

                    <TextView
                        android:id="@+id/date_end"
                        style="@style/style_sec_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:background="@android:color/transparent"
                        android:drawableEnd="@drawable/date_icon"
                        android:drawablePadding="@dimen/tv_drawable_padding"
                        android:gravity="center"
                        android:textSize="@dimen/medium_text_low"
                        />

                    <TextView
                        android:id="@+id/date_taxt"
                        style="@style/style_sec_sec"
                        android:layout_width="match_parent"
                        android:text="25-8-2023"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:drawablePadding="@dimen/tv_drawable_padding"
                        android:gravity="center|left"
                        android:textSize="@dimen/medium_text_low"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:background="#f6f2f3"
                    android:layout_marginBottom="5dp"
                    android:layout_margin="5dp"
                    >
                    <TextView
                        android:id="@+id/cancel"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:text="@string/cancel_cap"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        style="@style/style_sec_sec"/>
                    <TextView
                        android:id="@+id/ok_btn"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_width="wrap_content"
                        android:text="@string/ok"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        style="@style/style_sec_sec"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>


<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_background"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/addInvoiceItem_btn"
            style="@style/style_sec"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_field_height"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/submit_btn"
            android:text="@string/invoice_add_new_item"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/empty_invoice_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/recyclerview"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_no_jobs_24"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/empty_inv_txt"
                style="@style/style_sub_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/addInvoiceItem_btn"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/invoice_re_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorPrimary"
                android:gravity="start|end"
                android:padding="20dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/invoice_nm"
                    style="@style/style_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <!--android:text="@string/invoice_Name"-->
                <TextView
                    android:id="@+id/inv_total_amount"
                    style="@style/style_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap" />
                <!--android:text="Rs 500000"-->

                <TextView
                    android:id="@+id/invoice_adrs"
                    style="@style/style_thrid_thrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invoice_nm"
                    android:gravity="start"
                    android:textColor="#4EBAC2"
                    android:textStyle="bold" />
                <!--android:text="Aplite Info Solution"-->

                <TextView
                    android:id="@+id/in_country"
                    style="@style/style_thrid_thrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invoice_adrs"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    android:visibility="visible" />
                <!--android:text="312 3rd floor aplite info solution"-->

                <TextView
                    android:id="@+id/inv_email"
                    style="@style/style_thrid_thrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/in_country"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:textStyle="normal" />
                <!--android:text="312 3rd floor aplite info solution"-->

                <TextView
                    android:id="@+id/pay_txt"
                    style="@style/style_sec"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inv_total_amount"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/invoice_chip"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:text="@string/pay"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative_chip"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/invoice_re_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="-30dp"
                android:layout_marginEnd="60dp"
                android:adjustViewBounds="true"
                android:background="@drawable/invoice_chip"
                android:elevation="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">
                <!--android:layout_above="@id/invoice_recyclerView"-->

                <TextView
                    android:id="@+id/invoice_cre_dt"
                    style="@style/style_thrid_thrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toStartOf="@+id/divider_view"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
                <!--android:text="23/03/2019"-->

                <TextView
                    android:id="@+id/tv_create_date"
                    style="@style/style_thrid_thrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invoice_cre_dt"
                    android:layout_alignStart="@+id/invoice_cre_dt"
                    android:layout_alignEnd="@+id/invoice_cre_dt"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:textSize="@dimen/medium_txt_low"
                    android:textStyle="normal"
                    tools:ignore="SpUsage" />


                <TextView
                    android:id="@+id/invoice_due_dt"
                    style="@style/style_thrid_thrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/divider_view"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_due_date"
                    style="@style/style_thrid_thrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invoice_due_dt"
                    android:layout_alignStart="@+id/invoice_due_dt"
                    android:layout_alignEnd="@+id/invoice_due_dt"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:textSize="@dimen/medium_txt_low"
                    android:textStyle="normal"
                    tools:ignore="SpUsage" />


                <View
                    android:id="@+id/divider_view"
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:background="@color/txt_color" />

            </RelativeLayout>


            <!---->

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_chip"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/j_prio_linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/tax_loc_lable"
                        style="@style/style_sec_sec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/taxation_based_on_location" />

                    <TextView
                        android:id="@+id/loc_txt"
                        style="@style/subtext_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/tax_bck_lay"
                        android:drawableEnd="@drawable/ic_down_arrow_24"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/white"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="@string/select"
                        android:textColor="@color/white"
                        tools:ignore="UnusedAttribute" />
                    <!--
                    -->
                    <TextView
                        android:id="@+id/remove_txt_loc"
                        style="@style/subtext_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/remove" />
                </LinearLayout>


            </RelativeLayout>

            <com.eot_app.utility.util_interfaces.NoDefaultSpinner
                android:id="@+id/loc_tax_dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:popupBackground="@drawable/popupbg"
                android:visibility="invisible" />


            <!---->


            <RelativeLayout
                android:id="@+id/listItem_invoice_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl"
                android:layout_marginTop="5dp"
                android:gravity="start|center">


                <ImageView
                    android:id="@+id/rm_invice_im"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_delete_invoce_item"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/list_item_invoice_count"
                    style="@style/style_thrid_thrd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swiperefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/listItem_invoice_layout"
                android:layout_marginTop="5dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="70dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView_invoice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView_shippingitem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView_invoice" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_parent_calculation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/invoice_calculation_bd"
                            android:padding="20dp"
                            android:paddingVertical="20dp"
                            android:layout_below="@id/recyclerView_shippingitem"
                            android:visibility="gone"
                            >
                            <TextView
                                android:id="@+id/txt_lbl_sub_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/calculation_text_style"
                                android:fontFamily="@font/arimo_regular"
                                android:text="Sub Total:"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />
                            <TextView
                                android:id="@+id/txt_sub_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/calculation_text_style"
                                android:text=""
                                app:layout_constraintTop_toTopOf="@id/txt_lbl_sub_total"
                                app:layout_constraintBottom_toBottomOf="@id/txt_lbl_sub_total"
                                app:layout_constraintEnd_toEndOf="parent"
                                />
                            <TextView
                                android:id="@+id/txt_lbl_additional_discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/calculation_text_style"
                                android:fontFamily="@font/arimo_regular"
                                android:text="Additional Discount:"
                                android:layout_marginTop="10dp"
                                app:layout_constraintTop_toBottomOf="@id/txt_lbl_sub_total"
                                app:layout_constraintStart_toStartOf="@id/txt_lbl_sub_total"
                                />
                            <TextView
                                android:id="@+id/txt_additional_discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/calculation_text_style"
                                android:text=""
                                app:layout_constraintTop_toTopOf="@id/txt_lbl_additional_discount"
                                app:layout_constraintBottom_toBottomOf="@id/txt_lbl_additional_discount"
                                app:layout_constraintEnd_toEndOf="parent"
                                />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_tax"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/rv_invoice_multiple_tax_item"
                                app:layout_constraintTop_toBottomOf="@+id/txt_lbl_additional_discount"
                                tools:layout_editor_absoluteX="20dp" />
                            <TextView
                                android:id="@+id/txt_lbl_tax"
                                style="@style/calculation_text_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arimo_regular"
                                android:text="Extra Items Total :"
                                android:layout_marginTop="10dp"
                                app:layout_constraintTop_toBottomOf="@id/rv_tax"
                                app:layout_constraintStart_toStartOf="@id/rv_tax"
                                />

                            <TextView
                                android:id="@+id/txt_tax"
                                style="@style/calculation_text_style"
                                app:layout_constraintBottom_toBottomOf="@id/txt_lbl_tax"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/txt_lbl_tax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />

                            <TextView
                                android:id="@+id/txt_lbl_additional_discount1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/calculation_text_style"
                                android:fontFamily="@font/arimo_regular"
                                android:text="Additional Discount:"
                                android:layout_marginTop="10dp"
                                app:layout_constraintTop_toBottomOf="@id/txt_lbl_tax"
                                app:layout_constraintStart_toStartOf="@id/txt_lbl_tax"
                                />
                            <TextView
                                android:id="@+id/txt_additional_discount1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/calculation_text_style"
                                android:text=""
                                app:layout_constraintTop_toTopOf="@id/txt_lbl_additional_discount1"
                                app:layout_constraintBottom_toBottomOf="@id/txt_lbl_additional_discount1"
                                app:layout_constraintEnd_toEndOf="parent"
                                />
                            <View
                                android:id="@+id/view"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/border_font_color"
                                app:layout_constraintTop_toBottomOf="@id/txt_additional_discount1"
                                app:layout_constraintStart_toStartOf="@id/txt_lbl_sub_total"
                                app:layout_constraintEnd_toEndOf="@id/txt_sub_total"
                                />
                            <TextView
                                android:id="@+id/txt_lbl_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/calculation_text_style"
                                android:text="Total Amount: "
                                android:textSize="18dp"
                                android:textColor="@color/invoice_total_amount"
                                android:layout_marginTop="5dp"
                                app:layout_constraintTop_toBottomOf="@id/view"
                                app:layout_constraintStart_toStartOf="@id/txt_lbl_sub_total"
                                />
                            <TextView
                                android:id="@+id/txt_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/calculation_text_style"
                                android:text=""
                                android:textSize="18dp"
                                android:textColor="@color/invoice_total_amount"
                                app:layout_constraintTop_toTopOf="@id/txt_lbl_total"
                                app:layout_constraintBottom_toBottomOf="@id/txt_lbl_total"
                                app:layout_constraintEnd_toEndOf="parent"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </RelativeLayout>
                </ScrollView>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </RelativeLayout>

        <View
            android:id="@+id/backgroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#90ffffff"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearFabEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="18dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_fab_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="end"
            android:padding="3dp"
            android:textColor="@color/body_font_color"
            tools:ignore="InefficientWeight" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_email"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <!--<LinearLayout
        android:id="@+id/linearFabPrintInvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="18dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_fab_print_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:padding="3dp"
            android:textColor="@color/body_font_color" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_print_invoice"
            tools:ignore="ContentDescription" />
    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/linearFabAddNewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="18dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_fab_add_new_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:padding="3dp"
            android:textColor="@color/body_font_color" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_add_new_item"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/invoiceFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_generate_invoice"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>